<?xml version="1.0" ?>

<!-- File: config/services.xml -->

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="rokkacli.base_command" abstract="true">
            <argument type="service" id="rokkacli.provider.client"/>
            <argument type="service" id="rokkacli.helper.rokka"/>
        </service>

        <!-- User Commands -->
        <service parent="rokkacli.base_command"
                 id="rokkacli.user_create_command"
                 class="RokkaCli\Command\UserCreateCommand"
        >
            <argument type="service" id="rokkacli.configuration"/>
            <tag name="console.command"/>
        </service>

        <!-- Organization Commands -->
        <service parent="rokkacli.base_command"
                 id="rokkacli.organization_create_command"
                 class="RokkaCli\Command\OrganizationCreateCommand"
        >
            <argument type="service" id="rokkacli.configuration"/>
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.organization_info_command"
                 class="RokkaCli\Command\OrganizationInfoCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.organization_list_command"
                 class="RokkaCli\Command\OrganizationListCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.organization_membership_add_command"
                 class="RokkaCli\Command\OrganizationMembershipAddCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.organization_membership_info_command"
                 class="RokkaCli\Command\OrganizationMembershipInfoCommand"
        >
            <tag name="console.command"/>
        </service>

        <!-- Operation Commands -->
        <service parent="rokkacli.base_command"
                 id="rokkacli.operation_list_command"
                 class="RokkaCli\Command\OperationListCommand"
        >
            <tag name="console.command"/>
        </service>

        <!-- Image Commands -->
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_clone_command"
                 class="RokkaCli\Command\ImageCloneCommand">
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_clone_all_command"
                 class="RokkaCli\Command\ImageCloneAllCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_download_command"
                 class="RokkaCli\Command\ImageDownloadCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_list_command"
                 class="RokkaCli\Command\ImageListCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_upload_command"
                 class="RokkaCli\Command\ImageUploadCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_info_command"
                 class="RokkaCli\Command\ImageInfoCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_delete_command"
                 class="RokkaCli\Command\ImageDeleteCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_delete_all_command"
                 class="RokkaCli\Command\ImageDeleteAllCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_render_command"
                 class="RokkaCli\Command\ImageRenderCommand"
        >
            <tag name="console.command"/>
        </service>

        <!-- Dynamic Metadata Commands -->
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_dynamic_metadata_set_subjectarea_command"
                 class="RokkaCli\Command\DynamicMetadata\ImageDynamicMetadataSetSubjectAreaCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.image_dynamic_metadata_delete_subjectarea_command"
                 class="RokkaCli\Command\DynamicMetadata\ImageDynamicMetadataDeleteSubjectAreaCommand"
        >
            <tag name="console.command"/>
        </service>

        <!-- Stack Commands -->
        <service parent="rokkacli.base_command"
                 id="rokkacli.stack_info_command"
                 class="RokkaCli\Command\StackInfoCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.stack_list_command"
                 class="RokkaCli\Command\StackListCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.stack_clone_command"
                 class="RokkaCli\Command\StackCloneCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.stack_create_command"
                 class="RokkaCli\Command\StackCreateCommand">
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.stack_clone_all_command"
                 class="RokkaCli\Command\StackCloneAllCommand"
        >
            <tag name="console.command"/>
        </service>
        <service parent="rokkacli.base_command"
                 id="rokkacli.stack_delete_command"
                 class="RokkaCli\Command\StackDeleteCommand"
        >
            <tag name="console.command"/>
        </service>

        <!-- Test Commands -->
        <service parent="rokkacli.base_command"
                 id="rokkacli.test_test_command"
                 class="RokkaCli\Command\TestTestCommand"
        >
            <tag name="console.command"/>
        </service>

        <!-- utility services -->
        <service id="rokkacli.provider.client" class="RokkaCli\Provider\ClientProvider">
            <argument type="service" id="rokkacli.configuration"/>
        </service>

        <service id="rokkacli.helper.rokka" class="RokkaCli\RokkaApiHelper">
            <argument type="service" id="rokkacli.configuration"/>
        </service>

    </services>
</container>
